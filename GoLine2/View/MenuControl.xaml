<ItemsControl x:Class="GoLine2.MenuControl" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoLine2"
      xmlns:props="clr-namespace:GoLine2.Properties"
      mc:Ignorable="d"
              Background="White"
      d:DesignHeight="320" d:DesignWidth="300"
             local:NavigationHelper.IsHome="True"
              MinWidth="250"
                  ItemContainerStyle="{StaticResource SpecialNormalButtonStyle2}"
              ItemsPanel="{StaticResource VerticalStackPanel}">
    <!--SpecialEllipseButtonStyle-->
    <!--Horizontal-->
    <Button Content="{x:Static props:Resources.Top}" Click="TopBtnClick" />
    <Button Content="{x:Static props:Resources.Settings}" Click="SettingBtnClick"/>
    <Button Content="{x:Static props:Resources.Help}" Click="HelpBtnClick" />
    <Button Content="{x:Static props:Resources.About}" Click="AboutBtnClick"/>
    <Button Content="{x:Static props:Resources.Exit}" Click="ExitBtnClick"/>
</ItemsControl>
